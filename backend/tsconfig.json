{
  "compilerOptions": {
    "lib": [
      "ES2021"
    ],
    "target": "EsNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
